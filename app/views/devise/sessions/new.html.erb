<div class="container col-md-8 col-md-offset-2 mt-5 p-5">
<h2 class="mt-100 mb-3 text-center">會員登入Sign In</h2>
<hr>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
    <%= f.input :password, required: false, class: "form-control" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
  </div>
  <%= link_to "忘記密碼?", new_password_path(resource_name), class: "d-inline er-font-12 ml-2"%><br />


  <div class="form-actions mt-4">
    <%= f.button :submit, "Log in", class: "btn-b  btn-block" %>
  </div>
<% end %>

  <hr>

  <div class="text-center ">
    <%= link_to "加入會員 Sign Up", new_registration_path(resource_name),clsss:"gray-text text-center" %>
  </div>

</div>