<div class="container">
  <% if @product.errors.any? %>
  <h3>We have some errors here!</h3>
  <ul>
  <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  <% end %>

  <div class="pt-5 mt-5">
    <%= form_for [:admin, @product] do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :en_name, "English Name" %>
      <%= f.text_field :en_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :flavor, 'Flavor' %>
      <%= f.text_field :flavor, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, 'Price' %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :avatar, "Photo" %>
      <%= f.file_field :avatar, multiple: true, name: "photos[avatar][]" %>
    </div>

    <div>
      <%= f.submit button, class: "btn btn-info" %>
    </div>

    <% end %>
  </div>
  <br>
  
</div>