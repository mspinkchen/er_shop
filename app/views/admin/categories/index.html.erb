<div class="container">

<!-- 新增欄位 -->

  <div>
    <%= form_for [:admin, @category] do |f| %>
    <div class="form-row">
      <div class="col"> 
        <%= f.text_field :name, placeholder: "Category Name", class: "form-contol" %>
      </div>

      <div class="col">
      <%= f.submit 'submit', class: "btn btn-info"  %>
        <% if @category.errors.any? %>
          <%= @category.errors.full_messages.to_sentence %>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
  <br>

<!-- 顯示分類 -->

  <table class="table table-hover">
    <thead class="table-dark">
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to 'edit', admin_categories_path(id: category.id) %></td>
        <td><%= link_to 'delete', admin_category_path(category), method: :delete, data: {confirm:"Are you sure?"} %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to 'Back', admin_bulletins_path, class: "btn btn-success" %>
  </div>
</div>